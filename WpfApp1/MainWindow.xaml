<Window x:Class="WpfApp1.MainWindow" x:Name="windowMain" x:FieldModifier="public"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        WindowState="Maximized"
        Topmost="True">
    <!--Application Only Runs in Full Screen-->


    <Window.Background>
        <SolidColorBrush Color="Transparent"/>
    </Window.Background>
    
    <!--WindowChrome Object-->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="25" CornerRadius="30" GlassFrameThickness="0" ResizeBorderThickness="10"/>
    </WindowChrome.WindowChrome>

        <Grid>
            
        </Grid>

</Window>
